<style>
/* Base Sidebar Styles */
.sidebar-column {
  position: fixed;
  left: 0px; /* hover-forbidden by default */
  top: 0;
  height: 100vh;
  width: 300px;
  background: white;
  box-shadow: -2px 0 10px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  z-index: 1000;
  overflow-y: auto;
  padding: 1rem;
}

/* Show sidebar when hovering near left edge */
body:hover > .sidebar-column {
  left: 0;
}

/* Keep sidebar visible when hovering over it */
.sidebar-column:hover {
  left: 0;
}

/* TOC Styles */
.numbered-toc {
  counter-reset: section;
  padding-top: 20px;
}

.numbered-toc ol {
  list-style: none;
  padding-left: 1.2rem;
  margin: 0.3rem 0;
}

.numbered-toc li {
  margin: 0.4rem 0;
  position: relative;
}

.numbered-toc a {
  display: flex;
  align-items: center;
  color: #333;
  text-decoration: none;
  padding: 0.3rem 0;
  border-bottom: 1px solid #f0f0f0;
  transition: color 0.2s;
}

.numbered-toc a:hover {
  color: hsl(42, 40%, 55%);
}

.toc-number {
  display: inline-block;
  min-width: 2rem;
  color: #666;
  font-size: 0.9em;
  margin-right: 0.5rem;
}

.toc-title {
  flex: 1;
}

/* Indentation for different levels */
.toc-level-2 { margin-left: 0; }
.toc-level-3 { margin-left: 1rem; }
.toc-level-4 { margin-left: 2rem; }

/* Left edge trigger zone */
body::after {
  content: '';
  position: fixed;
  left: 0;
  top: 0;
  width: 20px;
  height: 100vh;
  z-index: 999;
  background: transparent;
}

.numbered-toc a.active {
  color: hsl(30, 100%, 50%); /* active link color */
  font-weight: bold; /* optional */
}

</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tocLinks = document.querySelectorAll('.numbered-toc a[href^="#"]');
  const sections = Array.from(tocLinks).map(link => {
    return document.querySelector(link.getAttribute('href'));
  });
  const headerOffset = 80; // adjust for fixed header

  function onScroll() {
    const scrollPos = window.scrollY + headerOffset + 5; // small buffer
    let currentSectionIndex = sections.length - 1;

    for (let i = 0; i < sections.length; i++) {
      if (sections[i].offsetTop > scrollPos) {
        currentSectionIndex = i - 1;
        break;
      }
    }

    tocLinks.forEach(link => link.classList.remove('active'));
    if (currentSectionIndex >= 0) {
      tocLinks[currentSectionIndex].classList.add('active');
    }
  }

  window.addEventListener('scroll', onScroll);
  onScroll(); // initialize on page load
});
</script>


<script>
document.addEventListener('DOMContentLoaded', function() {
  const tocLinks = document.querySelectorAll('.numbered-toc a[href^="#"]');
  const headerOffset = 80; // Adjust to your fixed header height if any

  tocLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      const targetElement = document.querySelector(targetId);

      if (!targetElement) return;

      // Calculate scroll position with header offset
      const elementPosition = targetElement.getBoundingClientRect().top;
      const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

      // Smooth scroll to position
      window.scrollTo({
        top: offsetPosition,
        behavior: "smooth"
      });

      // Update URL after scrolling (slightly delayed)
      setTimeout(() => {
        history.pushState(null, null, targetId);
      }, 600);
    });
  });
});
</script>

