---
layout: default
---

<main class="container">
  <!-- Main Content Column -->
  <article class="content-column">
    <div class="center">
      <h1>{{ page.title }}</h1>
      <p class="author">
        {{ page.author }}
        <br/>
        {{ page.date | date: '%B %-d, %Y' }}
      </p>
    </div>

    <div class="divider"></div>

    {{ content }}
  </article>

  <!-- New Sidebar Column -->
  <aside class="sidebar-column">
    {% include sidebar.liquid %}  <!-- Sidebar content -->
  </aside>

  <!-- Navigation (below both columns) -->
  <div class="page-navigation">
    {% if page.next.url %}
      <a class="next" href="{{ page.next.url | relative_url }}" title="NEXT: {{page.next.title}}">&lt;&lt;</a>
      <span>&middot;</span>
    {% endif %}
    <a class="home" href="{{ site.baseurl }}/" title="Back to Homepage">Home</a>
    {% if page.previous.url %}
      <span>&middot;</span>
      <a class="prev" href="{{ page.previous.url | relative_url }}" title="PREV: {{page.previous.title}}">&gt;&gt;</a>
    {% endif %}
  </div>
</main>